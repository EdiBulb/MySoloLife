<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="200dp"><!--item을 위한 레이아웃이라서, 높이가 200dp인 듯하다.-->
    <!--리사이클러뷰 아이템을 위한 레이아웃-->


    <ImageView
        android:id="@+id/imageArea"
        android:src="@drawable/main_icon_oneroom"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/textArea"
        android:text="Text Area"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/bookmakrArea"
        android:src="@drawable/bookmark_white"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"/>
    <!--이거 다 만들면 어댑터에 연결할 것임임-->

</LinearLayout>